<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris70">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/gris70"
        android:padding="0dp"
        android:layout_margin="0dp"
        tools:context="com.dvlpxl.contactosdp.app.ListaContactos">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:background="@color/gris80">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contactos"
                android:textColor="@color/blanco"
                android:textIsSelectable="false"
                android:textSize="32sp"
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal|top" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@color/blanco"
                android:textSize="32sp"
                android:textStyle="bold"
                android:id="@+id/btnAdd"
                android:layout_gravity="end|center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="agregarContacto"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:textColor="@color/blanco"
                android:textSize="32sp"
                android:textStyle="bold"
                android:id="@+id/btnReload"
                android:layout_gravity="left|center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="cargarContactos" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/contactosLista"></LinearLayout>

    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dvlpxl.contactosdp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".app.ListaContactos" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".app.CamposContacto"
                android:label="CamposContacto">
                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.dvlpxl.contactosdp.app.ListaContactos" />
        </activity>

        <activity android:name=".app.VistaContacto"
            android:label="VistaContacto">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dvlpxl.contactosdp.app.ListaContactos" />
        </activity>

    </application>

</manifest>